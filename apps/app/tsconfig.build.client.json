{
  "$schema": "http://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.json",
  "include": [".next/types/**/*.ts"],
  "compilerOptions": {
    "strict": false,
    "strictNullChecks": true,

    "noFallthroughCasesInSwitch": true,
    "incremental": true,

    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "^/*": ["./*"]
    },
    "plugins": [{ "name": "next" }]
  }
}
