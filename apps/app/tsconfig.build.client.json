{
  "$schema": "http://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",

    "strict": false,
    "noFallthroughCasesInSwitch": true,
    "incremental": true,

    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "^/*": ["./*"],

      "@growi/codemirror-textlint": ["../../packages/codemirror-textlint/src"],

      "debug": ["./src/server/utils/logger/alias-for-debug"]
    }
  }
}
