{
  "$schema": "http://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "transpiled",
    "declaration": true,
    "noResolve": false,
    "preserveConstEnums": true,
    "sourceMap": false,
    "noEmit": false,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "^/*": ["./*"]
    }
  },
  "exclude": [
    "config",
    "resource",
    "src/client",
    "src/components",
    "src/components-universal",
    "src/linter-checker",
    "src/stores",
    "src/stores-universal",
    "src/styles",
    "src/**/*.jsx",
    "src/**/*.tsx",
    "src/**/*.spec.ts",
    "src/**/*.integ.ts"
  ]
}
