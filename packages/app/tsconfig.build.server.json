{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "outDir": "transpiled",
    "declaration": true,
    "noResolve": false,
    "preserveConstEnums": true,
    "sourceMap": false,
    "noEmit": false,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "^/*": ["./*"],
      "@growi/preset-themes/*": ["../preset-themes/*"],
      "@growi/remark-lsx/*": ["../remark-lsx/dist/cjs/*"],
      "debug": ["./src/utils/logger/alias-for-debug"]
    }
  },
  "exclude": [
    "resouce",
    "src/client",
    "src/components",
    "src/linter-checker",
    "src/stores",
    "src/styles",
    "src/styles-hackmd"
  ]
}
