{
  "$schema": "http://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-jsxdev",

    "plugins": [{ "name": "typescript-plugin-css-modules" }],

    "typeRoots": ["./src/@types"],
    "types": [
      "vitest/globals"
    ],

    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
    }
  },
  "include": [
    "src"
  ]
}
